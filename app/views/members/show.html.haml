.member-container{ 'ng-controller' => 'friendsController' }
  .topbar-member
    .col-md-3
      %h4 #{ @member.name }
    .col-md-3
      %select.form-control
        %option{ value: 'one' } First
        %option{ value: 'two' } Second
    .col-md-3
      %input.form-control{ placeholder: 'Search friend', type: 'text' }
    .col-md-3
      %button.btn.btn-primary.add-member-btn{ type: 'button', 'ng-click' => "showModal(#{ @member.id })" } Add New Friend
